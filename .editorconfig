# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_style = space
indent_size = 2

[.eslintrc.json]
indent_style = space
indent_size = 2

[test/fixtures/*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 4

[*.js]
indent_size = 2
indent_style = space

[*.mjs]
indent_size = 2
indent_style = space

[*.mts]
indent_size = 2
indent_style = space

[*.mustache]
indent_size = 2
indent_style = space

[build/typedoc.conf.json]
indent_size = 2
indent_style = space
